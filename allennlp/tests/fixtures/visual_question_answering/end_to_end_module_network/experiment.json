{
  "dataset_reader": {
    "type": "shapes"
  },
  "train_data_path": "allennlp/tests/fixtures/data/visual_question_answering/shapes/train.tiny*",
  "validation_data_path": "allennlp/tests/fixtures/data/visual_question_answering/shapes/train.tiny*",
  "model": {
    "type": "end_to_end_module_network",
    "utterance_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 2,
          "trainable": true
        }
      }
    },
    "image_encoder": {
      "type": "pass_through"
    },
    "image_shape": [3, 30, 30],
    "action_embedding_dim": 4,
    "add_action_bias": false,
    "encoder": {
      "type": "lstm",
      "input_size": 2,
      "hidden_size": 2,
      "num_layers": 1
    },
    "decoder_beam_search": {
      "beam_size": 3
    },
    "max_decoding_steps": 10,
    "attention": {"type": "dot_product"}
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["utterance", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    }
  }
}
